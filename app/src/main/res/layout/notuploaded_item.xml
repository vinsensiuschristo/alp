<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/relativeLayout1">

        <TextView
            android:id="@+id/textIdGallery"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:text="ID Gallery : "
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/idGallery"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textIdGallery"
            android:text="ID Gallery"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/textNamaGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textIdGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:text="Nama Gallery : "
            android:textSize="11dp"
            android:fontFamily="@font/rubik_regular"/>


        <TextView
            android:id="@+id/namaGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textNamaGallery"
            android:text="Nama Gallery "
            android:textSize="11dp"
            android:ellipsize="end"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/textAlamatGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNamaGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:text="Alamat Gallery : "
            android:textSize="11dp"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/alamatGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textAlamatGallery"
            android:text="Alamat Gallery "
            android:textSize="11dp"
            android:ellipsize="end"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/textKotaGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAlamatGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:text="Kota Gallery : "
            android:textSize="11dp"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/kotaGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alamatGallery"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textAlamatGallery"
            android:text="Kota Gallery "
            android:textSize="11dp"
            android:ellipsize="end"
            android:fontFamily="@font/rubik_regular"/>


        //Image Button

        <ImageButton
            android:id="@+id/uploadAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textKotaGallery"
            android:layout_alignStart="@+id/textKotaGallery"
            android:layout_marginStart="197dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_action_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadAudio"
            android:layout_marginStart="-59dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/uploadAudio"
            android:fontFamily="@font/rubik_regular"
            android:maxLines="1"
            android:text="Upload Audio"
            android:textSize="11dp" />

        <ImageButton
            android:id="@+id/uploadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kotaGallery"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/uploadAudio"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_upload_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadData"
            android:layout_marginStart="34dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/uploadAudio"
            android:fontFamily="@font/rubik_regular"
            android:maxLines="1"
            android:text="Upload Data"
            android:textSize="11dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>