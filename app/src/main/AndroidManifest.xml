        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCaUFsklhUr-KWVJ3VGfCqdkykHOZGPhLo"/>

        <activity
            android:name=".Activity.UpdateProfileActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.UpdateProfileTheme"/>
        <activity
            android:name=".Activity.ReportActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Alp" />
        <activity
            android:name=".Activity.ActivityDownload"
            android:exported="true"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".Activity.DetailProjectActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.NewTheme" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NewTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>